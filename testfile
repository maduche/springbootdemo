import org.springframework.data.mongodb.core.MongoTemplate;
import org.springframework.data.mongodb.core.query.Criteria;
import org.springframework.data.mongodb.core.query.Query;
import java.time.LocalDate;
import java.util.List;

public class YourService {

    private final MongoTemplate mongoTemplate;

    public YourService(MongoTemplate mongoTemplate) {
        this.mongoTemplate = mongoTemplate;
    }

    public List<YourEntity> findEntitiesWithMultipleConditions() {
        LocalDate currentDate = LocalDate.now();
        LocalDate currentDateMinus5Days = currentDate.minusDays(5);
        LocalDate currentDatePlus11Days = currentDate.plusDays(11);

        Criteria criteria = new Criteria().andOperator(
                Criteria.where("field1").is("pending"),
                Criteria.where("dateField1").gte("dateField2 + 1000 * 60 * 60 * 24 * 11"),
                Criteria.where("dateField1").lte(currentDateMinus5Days)
        );

        Query query = new Query(criteria);

        return mongoTemplate.find(query, YourEntity.class);
    }
}
